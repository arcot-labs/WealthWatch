{
    "name": "@aditya-arcot/wealthwatch-shared",
    "version": "5.0.7",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aditya-arcot/WealthWatch.git"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist/ && tspc -p tsconfig.build.json",
        "dev": "tspc --watch -p tsconfig.build.json",
        "lint": "eslint --fix --max-warnings=0 src",
        "test": "vitest dev --coverage --ui",
        "test:deploy": "vitest run --coverage"
    },
    "lint-staged": {
        "*": [
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "@tsconfig/node-lts": "^24.0.0",
        "@tsconfig/strictest": "^2.0.8",
        "plaid": "^41.1.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.17",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.3.0",
        "ts-patch": "^3.3.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0",
        "vitest": "^4.0.17"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    }
}
